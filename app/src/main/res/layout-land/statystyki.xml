<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittextilefigur"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="36sp"
        android:text="Statystyki" />

    <TextView
        android:text="Kwadrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/Kwadrat"
        android:layout_below="@+id/ile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="Kolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kolo"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/trojkat"
        android:layout_alignEnd="@+id/trojkat"
        android:textColor="@android:color/holo_green_light" />

    <GridView
        android:id="@+id/gridstatystyki"
        android:numColumns="3"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="400dp" />

    <Button
        android:text="Wroc!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wroc"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/kwadracik"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:text="Suma pol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumapol"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_orange_light"
        android:layout_above="@+id/gridstatystyki"
        android:layout_alignLeft="@+id/wroc"
        android:layout_alignStart="@+id/wroc" />

    <TextView
        android:text="Suma cech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumacech"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_purple"
        android:layout_above="@+id/gridstatystyki"
        android:layout_toRightOf="@+id/wroc"
        android:layout_toEndOf="@+id/wroc"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <TextView
        android:text="Ile?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ile"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_above="@+id/gridstatystyki"
        android:layout_alignLeft="@+id/gridstatystyki"
        android:layout_alignStart="@+id/gridstatystyki" />

    <TextView
        android:text="Trojkat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trojkat"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignBottom="@+id/gridstatystyki"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>