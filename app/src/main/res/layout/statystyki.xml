<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*">

    <!-- Table Row 1 -->
    <TableRow
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="5dp"
            android:text="Statystyki"
            android:width="120dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="normal|bold|italic"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:layout_width="150sp" />

    </TableRow>

    <!-- Table Row 2 -->
    <TableRow
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/Pustepole"
            android:layout_column="0"
            android:layout_width="fill_parent"
            android:gravity="center" />

        <TextView
            android:text="Ile Figur?"
            android:id="@+id/ileFigur"
            android:textAlignment="center"
            android:layout_column="1"
            android:textSize="16sp"
            android:textColor="@android:color/background_dark"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center" />

        <TextView
            android:text=" suma Cech"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/sumaCech"
            android:layout_column="2"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@android:color/background_dark"
            android:gravity="center" />


        <TextView
            android:text="suma Pol"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp"
            android:layout_column="3"
            android:layout_width="fill_parent"
            android:id="@+id/sumaPol"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:gravity="center" />
    </TableRow>

    <!-- Table Row 3 -->
    <TableRow
        android:layout_marginTop="15dp">
        <TextView />
        <CheckBox
            android:id="@+id/chkRememberPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember Password"
            android:textColor="#3333FF"/>
    </TableRow>

    <!-- Table Row 4 -->
    <TableRow
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/buttonSignIn"
            android:text="Log In"
            android:background="#FF6600"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </TableRow>
</TableLayout>